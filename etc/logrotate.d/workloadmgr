/var/log/workloadmgr/*.log {
  daily
  missingok
  compress
  delaycompress
  notifempty
  copytruncate
  size=25M
  rotate 3
}

/opt/stack/data/wlm/auditlogs/*.log {
  monthly
  missingok
  compress
  delaycompress
  notifempty
  copytruncate
  size=25M
  rotate 12
}

/tmp/vmware-root/*.log {
  hourly
  missingok
  rotate 1
  lastaction
    sudo rm -rf /tmp/vmware-root/*.log
    sudo rm -rf /tmp/vmware-root/*.log.1    
  endscript  
}